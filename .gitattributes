# Ensure shell scripts always use LF line endings
*.sh text eol=lf

# Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# SQL files
*.sql text eol=lf

# Environment files
.env* text eol=lf
